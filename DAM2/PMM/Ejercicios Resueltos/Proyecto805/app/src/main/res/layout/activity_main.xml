<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.juan11791.proyecto805.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NumCita"
        android:id="@+id/tvNumCita"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/etFecha"
        android:hint="Fecha"
        android:textAlignment="center"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/tvNumCita"
        android:layout_marginTop="51dp"
        android:layout_toStartOf="@+id/tvNumCita"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/etHora"
        android:hint="Hora"
        android:textAlignment="center"
        android:layout_marginRight="20dp"
        android:layout_alignBottom="@+id/etFecha"
        android:layout_toEndOf="@+id/tvNumCita"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etAsunto"
        android:hint="Asunto"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/etFecha"
        android:layout_marginTop="56dp"
        android:layout_alignEnd="@+id/etHora"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/etFecha"/>
</RelativeLayout>
