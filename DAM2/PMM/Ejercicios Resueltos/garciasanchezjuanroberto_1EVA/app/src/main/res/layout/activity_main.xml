<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.juan11791.garciasanchezjuanroberto.MainActivity">

    <CheckBox
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="Bicicleta"
        android:background="#36894d"
        android:id="@+id/cbBici"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="52dp" />

    <CheckBox
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="Patinete"
        android:background="#36894d"
        android:id="@+id/cbPatin"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:textSize="25dp"
        android:layout_below="@+id/cbBici"
        android:layout_alignEnd="@+id/cbBici"
        android:layout_marginTop="30dp" />

    <CheckBox
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="Monopatín"
        android:background="#36894d"
        android:id="@+id/cbMonop"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:textSize="25dp"
        android:layout_below="@+id/cbPatin"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etBici"
        android:background="#5dac73"
        android:padding="20dp"
        android:textSize="25dp"
        android:layout_alignTop="@+id/cbBici"
        android:layout_toEndOf="@+id/cbBici"
        android:layout_marginStart="32dp" />

    <EditText
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etPatin"
        android:background="#5dac73"
        android:padding="20dp"
        android:textSize="25dp"
        android:layout_alignTop="@+id/cbPatin"
        android:layout_alignStart="@+id/etBici" />

    <EditText
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etMonop"
        android:background="#5dac73"
        android:padding="20dp"
        android:textSize="25dp"
        android:layout_alignTop="@+id/cbMonop"
        android:layout_alignStart="@+id/etPatin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvBici"
        android:text="2€"
        android:background="#7cbe8e"
        android:padding="20dp"
        android:textSize="25dp"
        android:layout_alignTop="@+id/etBici"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvPatin"
        android:text="3€"
        android:background="#7cbe8e"
        android:padding="20dp"
        android:textSize="25dp"
        android:layout_alignTop="@+id/etPatin"
        android:layout_alignEnd="@+id/tvBici" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvMonop"
        android:text="5€"
        android:background="#7cbe8e"
        android:padding="20dp"
        android:textSize="25dp"
        android:layout_alignTop="@+id/etMonop"
        android:layout_alignEnd="@+id/tvPatin" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:id="@+id/btnEnviar"
        android:onClick="enviar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp" />
</RelativeLayout>
